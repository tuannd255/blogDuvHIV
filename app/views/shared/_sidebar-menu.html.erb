	<h2 class="title">Follow us</h2>
		<div class="item">
			<div class="icon">

			</div>

		</div>

	</div> -->

	<div class="popular-post">
		<h2 class="title">Popular posts</h2>
		<% @popular_posts.each do |post| %>
			<div class="post">
				<%= link_to post do %>
					<div class="avatar">
						<%= image_tag post.image_post.avatar_cricle.to_s %>
					</div>

					<div class="title">
						<%= post.title %>
					</div>

				<% end %>
				<div style="clear: both;"></div>
			</div>
		<% end %>
	</div>

	<div class="tags">
		<h2 class="title">Tags</h2>

		<% tags.each do |tag| %>
			<div class="tag">
				<%= link_to tag, class: "tag-link" do %>
					<%= tag %>
				<% end %>
				<div class="number_tag"><%= tag_count_post(tag) %></div>
			</div>
		<% end %>

		<div style="clear: both;"></div>
	</div>
</div>
