<div class="sidebar">
	<div class="about-me">
		<h2 class="title"><%= t "sidebar.about_me" %></h2>

		<%= image_tag "logo.jpg",
			class: "avatar" %>
		<div class="description">
			<%= t "sidebar.description" %>
		</div>
	</div>

	<div class="network-social">
		<h2 class="title">Facebook</h2>
		<div class="fb-page" data-href="https://www.facebook.com/Ducs-Blogger-1340686746033236/?modal=admin_todo_tour" data-tabs="Bloger ios and rails" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"><blockquote cite="https://www.facebook.com/Ducs-Blogger-1340686746033236/?modal=admin_todo_tour" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/Ducs-Blogger-1340686746033236/?modal=admin_todo_tour">Duc&#039;s Blogger</a></blockquote></div>
	</div>

