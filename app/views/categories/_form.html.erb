<%= form_for @category, html: {class: "form-horizontal", multipart: true} do |f| %>
  <%= render "shared/error_message", object: f.object %>

  <div class="form-group">
    <%= f.label :image_category, class: "control-label col-sm-2" %>
    <div class="col-md-10">
      <%= f.file_field :image_category %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, class: "control-label col-sm-2" %>
    <div class="col-md-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-2" %>
    <div class="col-md-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit yield(:button_text), class: "btn btn-default" %>
    </div>
  </div>
<% end %>
