<%= form_for @post, html: {class: "form-horizontal", multipart: true} do |f| %>
	<div class="form-group">
		<%= f.label :image_post, class: "control-label col-sm-2" %>
		<div class="col-md-10">
			<%= f.file_field :image_post %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :title, class: "control-label col-sm-2" %>
		<div class="col-md-10">
			<%= f.text_field :title, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :content, class: "control-label col-sm-2" %>
		<div class="col-md-10">
			<%= f.text_area :content, class: "form-control froalaEditor" %>
		</div>
	</div>

	<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    	<%= f.submit yield(:button_text), class: "btn btn-default" %>
    </div>
  </div>
<% end %>