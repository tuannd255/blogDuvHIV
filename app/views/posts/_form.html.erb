<%= form_for @post, html: {class: "form-horizontal", multipart: true} do |f| %>
	<%= render "shared/error_message", object: f.object %>

	<div class="form-group">
		<%= f.label :image_post, class: "control-label col-sm-2" %>
		<div class="col-md-10">
			<%= f.file_field :image_post %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :title, class: "control-label col-sm-2" %>
		<div class="col-md-10">
			<%= f.text_field :title, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :category_id, class: "control-label col-sm-2" %>
		<div class="col-md-10">
			<%= f.select :category_id, categories.collect {|p| [ p.name, p.id ]},
				{include_blank: t("posts.new.select_category")},
				class: "form-control" %>
		</div>
	</div>

	<%#= f.select :status,
              Payment.statuses.map{|key, _|
                [I18n.t("payments.statuses."+ key.to_s), key.to_s]
            }, {}, class: "form-control" %>

	<div class="form-group">
		<%= f.label :type_post, class: "control-label col-sm-2" %>
		<div class="col-md-10">
			<%= f.select :type_post, Post.type_posts.map {|key, _| [I18n.t("posts.types."+ key.to_s), key.to_s]},
				class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :content, class: "control-label col-sm-2" %>
		<div class="col-md-10">
			<%= f.text_area :content, class: "form-control", id: "markdown" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :tag_list, "Các tag được ngăn cách bởi dấu phẩy", class: "control-label col-sm-2" %>
		<div class="col-md-10">
			<%= f.text_field :tag_list, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    	<%= f.submit yield(:button_text), class: "btn btn-default" %>
    </div>
  </div>
<% end %>
